                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Previous Question"-->
                    <!--android:layout_weight="1"-->
                    <!--android:theme="@style/PrimaryFlatButton" />-->
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!--Premium in Kes-->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp"
            android:elevation="4dp"
            android:outlineSpotShadowColor="@color/colorPrimaryDark"
            android:layout_margin="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearitemscontainer5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/boogaloo"
                        android:text="Does WazInsure exist in my country?"
                        android:textColor="@color/gradient_start_color"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textSize="12dp"
                        android:id="@+id/premiumBuy"
                        android:nextFocusDown="@id/termsandCondtitionsBuy"
                        android:hint="Yes, WazInsure is cloud-based and you can work from anywhere!"
                        android:background="@color/transparent"
                        android:textColor="#555" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <!--<androidx.appcompat.widget.AppCompatButton-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Next Question"-->
                    <!--android:layout_weight="1"-->
                    <!--android:theme="@style/PrimaryFlatButton" />-->
