        <!--User KYC -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp"
            android:elevation="4dp"
            android:outlineSpotShadowColor="@color/colorPrimaryDark"
            android:layout_margin="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/boogaloo"
                        android:text="Few More Steps"
                        android:textColor="@color/gradient_start_color"
                        android:textSize="18sp" />

                    <!-- Start of Applicants KYC Collection-->
                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:theme="@style/AppTheme2"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:fitsSystemWindows="true">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp">

                            <!--Applicant  Surname name Label -->
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_marginBottom="5dp">
                                <EditText android:id="@+id/surnameReg"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textEmailAddress"
                                    android:hint="Applicant's Other Names" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <!--Applicant  First name Label -->
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_marginBottom="5dp">
                                <EditText android:id="@+id/firstnameReg"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textEmailAddress"
                                    android:hint="Applicant's First Name" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <!--Applicant Email Label -->
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp">
                                <EditText android:id="@+id/emailClaim"
                                    android:focusable="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textEmailAddress"
                                    android:hint="Applicant's Email"/>
                            </com.google.android.material.textfield.TextInputLayout>


                            <!--Applicant Mobile Number Label -->
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_marginTop="5dp"
                                >
                                <EditText android:id="@+id/mobile_noClaim"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:hint="Applicant's Mobile Number"/>



                            </com.google.android.material.textfield.TextInputLayout>



                            <!-- ID No -->
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_marginTop="5dp"

                                android:layout_marginBottom="5dp">
                                <EditText android:id="@+id/id_noClaim"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:hint="Applicants National ID Number"/>
                            </com.google.android.material.textfield.TextInputLayout>




                        </LinearLayout>
                    </ScrollView>
                    <!-- End of Applicants KYC SCroll View -->


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!--Terms and conditions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp"
            android:elevation="4dp"
            android:outlineSpotShadowColor="@color/colorPrimaryDark"
            android:layout_margin="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/boogaloo"
                        android:text="Terms and Conditions "
                        android:textColor="@color/gradient_start_color"
                        android:textColorHint="#555"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/montserrat"
                        android:text="We Cover accidental death or disablement to the insured and offer compensation payable to the insured or to his legal representative in accordance with the sum insured and scale of compensation agreed and specified in the policy schedule. "
                        android:textColor="@color/gradient_start_color"
                        android:textColorHint="#555"
                        android:textSize="12sp" />

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textSize="12sp"
                        android:id="@+id/termsandCondtitionsCheckboxClaim"
                        android:hint="Do you Accept the above Terms and Conditions ?"
                        android:nextFocusDown="@+id/kra_pinBuy"
                        android:background="@color/transparent"
                        android:textColor="#555" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <!-- Declaration Statement -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/benefactorScrollView"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp"
