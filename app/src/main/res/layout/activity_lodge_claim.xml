<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <!--Name of insurer-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp"
            android:elevation="4dp"
            android:outlineSpotShadowColor="@color/colorPrimaryDark"
            android:layout_margin="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:fontFamily="@font/boogaloo"
                        android:layout_weight="1"
                        android:text="Lodge Claim"
                        android:textColor="@color/gradient_start_color"
                        android:textSize="32sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/happy_customer" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/boogaloo"
                        android:layout_weight="1"
                        android:text="Policy Number"
                        android:textColor="@color/gradient_start_color"
                        android:textSize="18sp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:layout_weight="1"
                        android:hint="Policy No."
                        android:id="@+id/policyNumberClaim"
                        android:nextFocusDown="@id/infirmityBuy"
                        android:background="@color/transparent"
                        android:textColor="#555" />

                </LinearLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <!-- Claim Description -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp"
            android:elevation="4dp"
            android:outlineSpotShadowColor="@color/colorPrimaryDark"
            android:layout_margin="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/boogaloo"
                        android:text="Claim Description"
                        android:textColor="@color/gradient_start_color"
                        android:textSize="18sp" />


                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/claimDescriptionClaim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:fontFamily="@font/montserrat"
                        android:hint="Please give details about the Claim"
                        android:paddingLeft="10dp"
                        android:textColor="#555"
                        android:textSize="15sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Estimated Claim Amount-->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp"
            android:elevation="4dp"
            android:outlineSpotShadowColor="@color/colorPrimaryDark"
            android:layout_margin="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/boogaloo"
                        android:layout_weight="1"
                        android:text="Claim Estimated Amount"
                        android:textColor="@color/gradient_start_color"
                        android:textSize="18sp" />



                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:inputType="numberDecimal"
                        android:layout_weight="1"
                        android:hint="Estimated Claim Amount"
                        android:id="@+id/claimEstimateAmountClaim"
                        android:background="@color/transparent"
                        android:textColor="#555" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <!--Claim Date -->

